generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id             String      @id @default(cuid())
  name           String
  username       String      @unique
  password       String
  role           Role        @default(USER)
  age            Int
  totalPoints    Float       @default(0)  // مجموع النقاط
  consecutiveDays Int        @default(0)  // عداد الأيام المتتالية
  sleepData      SleepData[]
  agenda         Agenda[]
  activities     Activity[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model SleepData {
  id               String        @id @default(cuid())
  date             String // YYYY-MM-DD
  sleep_data       Json
  sleep_experience Json?
  factors          Json?
  userId           String
  user             User          @relation(fields: [userId], references: [id])
  dailyReport      DailyReport[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Agenda {
  id        String   @id @default(cuid())
  userId    String
  date      String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyReport {
  id                   String    @id @default(cuid())
  summary              String
  rating               Int
  total_sleep_duration String
  sleep_problems       String[]
  recommendations      String[]
  sleepDataId          String
  sleepData            SleepData @relation(fields: [sleepDataId], references: [id])
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Activity {
  id          String  @id @default(cuid())
  userId      String
  date        DateTime @default(now()) // اليوم الذي تم تسجيل النشاط فيه
  activityType String // نوع النشاط (fajr, dhuhr, adhkar, sleep, ...)
  user        User    @relation(fields: [userId], references: [id])
}
